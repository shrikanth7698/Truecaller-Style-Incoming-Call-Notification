<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    android:background="@drawable/background">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/card">
    <com.mikhaellopez.circularimageview.CircularImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        app:civ_border_color="@color/White"
        app:civ_border_width="4dp"
        app:civ_shadow="true"
        app:civ_shadow_radius="10"
        app:civ_shadow_color="@color/fullTransparent"
        android:id="@+id/contactPhoto"
        android:src="@drawable/user1"
        android:layout_marginTop="20dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/contactPhoto"
        android:id="@+id/Cname"
        android:text="243024"
        android:layout_margin="10dp"
        android:gravity="center"
        android:textColor="@color/BattleshipGray"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:background="@drawable/background1"
        android:padding="8dp"
        />
     <TextView
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:textStyle="bold"
         android:id="@+id/Cnumber"
         android:layout_below="@id/Cname"
         android:layout_centerHorizontal="true"
         android:textColor="@color/BattleshipGray"
         android:layout_centerVertical="true"
         android:padding="8dp"
         android:gravity="center"
         android:layout_marginTop="5dp"
         android:layout_marginLeft="10dp"
         android:layout_marginRight="10dp"
         android:background="@drawable/background1"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="swipe left to reject"
        android:visibility="invisible"
        android:textColor="@color/White"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/Cnumber"
        android:id="@+id/dismiss"
        android:layout_margin="5dp"
        android:clickable="true"
        />

    </RelativeLayout>
</FrameLayout>